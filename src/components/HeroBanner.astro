---
import Button from './Button.astro';
const { title, description, buttonText, backgroundUrl } = Astro.props;
---

<section
  class="z-0 flex min-h-screen flex-col items-center justify-center bg-cover text-black p-8 md:p-0"
  style={`background-image: url('${backgroundUrl}')`}
>


  <!-- <div class='absolute w-full h-full bg-black/50 z-0'></div> -->
  <div
    class="flex md:h-2/3 md:w-2/3 flex-col items-center justify-center rounded-3xl bg-white/90 p-12 text-center relative "
  >
  <svg
class='absolute top-10 right-10 hidden md:block'
  xmlns="http://www.w3.org/2000/svg"
  width="125"
  height="125"
  viewBox="0 0 24 24"
  fill="#6da758"
  stroke="#6da758"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <circle cx="9" cy="21" r="1" />
  <circle cx="20" cy="21" r="1" />
  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
</svg>
<svg
class='mb-8 md:mb-0 md:hidden'
  xmlns="http://www.w3.org/2000/svg"
  width="50"
  height="50"
  viewBox="0 0 24 24"
  fill="#6da758"
  stroke="#6da758"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <circle cx="9" cy="21" r="1" />
  <circle cx="20" cy="21" r="1" />
  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
</svg>
    <h3 class='text-hoja text-3xl md:text-4xl mb-4 '>{title}</h1>
    <p>{description}</p>
    <div class="mb-8 flex flex-col md:flex-row  gap-8">
      <div class="featured text-xl object-cover"><img class='mb-4'  width={150} src="/planta.webp" alt="" /><span>Categoría 1</span></div>
      <div class="featured text-xl object-cover"><img class='mb-4' width={150} src="/planta.webp" alt="" /><span>Categoría 2</span></div>
      <div class="featured text-xl object-cover"><img class='mb-4' width={150} src="/planta.webp" alt="" /><span>Categoría 3</span></div>
    </div>
    <Button buttonText={buttonText} customClass="place-self-center" /></div>
</section>


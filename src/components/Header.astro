---
import HeaderLink from './HeaderLink.astro';
---

<header id='main-header' class="sticky top-0 z-10 flex items-center justify-center py-4 bg-white transition-all duration-300 ease-in-out">
  <nav class="flex w-1/2 md:w-full justify-between md:px-24">
    <a href="/"><img id="logo" class='transition-all duration-300 ease-in-out' width={150} height={200} src={'/gastro-garden-logo.png'} alt="" /></a>
    <div class="internal-links hidden md:flex items-center gap-8">
      <HeaderLink href="/">Inicio</HeaderLink>
      <HeaderLink href="/sobre-nosotros">¿Quiénes somos?</HeaderLink>
      <HeaderLink href="/sobre-nosotros">Cursos</HeaderLink>

      <HeaderLink href="link-shopify">Tienda</HeaderLink>
      <HeaderLink href="/contacto">Contacto</HeaderLink>
    </div>
    <div class="social-links md:flex gap-8 hidden items-center">
      <a href="https://twitter.com/astrodotbuild" target="_blank">
        <span class="sr-only">Follow Astro on Twitter</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="25" height="25"
          ><path
            fill="currentColor"
